extend layout

block content

    h1 #{title}

    br

    if message === 'delete'
        div #[strong Are you sure you want to delete your account?]&nbsp;&nbsp;
            a(href='/account_delete/' + user_id) #[strong Yes]
            span &nbsp;&nbsp;
            a(href='/account') #[strong No]
    else
        br

    br



    p Email address:

    ul

        li #{email}

    p

        a(href='/account_update') Update email address or password



    hr

    p Notes

    if notes != ""

        for note in notes

            ul

                li

                    a(href=note.url) #{note.name}

    else

        ul

            li You have not created any notes



    if message !== 'delete'

        hr

        p

            a(href='/account?message=delete') Delete my account
